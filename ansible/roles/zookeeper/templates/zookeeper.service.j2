[Unit]
Description=Zookeeper Service
After=network-online.target

[Service]
Environment=JAVA_HOME=/usr/java/latest
Environment=ZOO_LOG_DIR={{ zookeeper_log_dir }}
Environment=JVMFLAGS=-javaagent:{{Â jmxtrans_dest }}/jmxtrans-agent.jar={{ jmxtrans_dest }}/{{ jmxagent }}
Environment=JMXPORT=5556
Type=forking
User=vagrant
ExecStart={{ zookeeper_home }}/bin/zkServer.sh start
ExecStop={{ zookeeper_home }}/bin/zkServer.sh stop
Restart=on-failure

[Install]
WantedBy=multi-user.target
